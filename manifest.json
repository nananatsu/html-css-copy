{
  "manifest_version": 2,
  "name": "元素导出器",
  "version": "1.0",
  "description": "选择并显示网页元素及其样式",
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
    "downloads"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "elementInfo.html"
  ]
}
